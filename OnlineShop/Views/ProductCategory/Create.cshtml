@model ProductCategoryModel
<form action="/ProductCategory/Create" method="post">
    <div class="form-group">
        <label class="label">
            Title
        </label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label class="label">
            Description
        </label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label class="label">
            ParentName
        </label>
        <select class="form-control" asp-for="ParentId" asp-items="@ViewBag.ParentSelectList"></select>
    </div>

</form>
