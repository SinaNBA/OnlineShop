@model IEnumerable<ProductCategoryModel>
<div class="row">
    <div class="col-12">
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="fas fa-plus"></i>
            New product category
        </a>
    </div>
</div>
<hr />
@if (Model == null || Model.Count() == 0)
{
    <div class="row">
        <div class="col">
            <div class="alert-warning">
                Product Category list is empty!
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col">
            <table class="table tabel-hover tabel-responsive">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>FileUrl</th>
                        <th>ParentName</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.FileId</td>
                            <td>@item.ParentId</td>
                            <td>
                                <a href="/ProductCategory/Edit?id=@item.Id" class="btn btn-warning btn-md">Edit</a>
                                <a asp-action="Delete" class="btn btn-danger btn-md" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
